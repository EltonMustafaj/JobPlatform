# Docker Development Environment
FROM node:20-alpine

# Install system dependencies
RUN apk add --no-cache git

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy application files
COPY . .

# Expose ports
EXPOSE 8081 19000 19001 19002

# Start Expo
CMD ["npm", "start"]
