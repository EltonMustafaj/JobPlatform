# Environment Configuration Template
# Copy this file to .env and fill in your actual values
# Never commit .env files with real credentials to version control

# ============================================
# SUPABASE CONFIGURATION
# ============================================
# Get these from: https://app.supabase.com/project/_/settings/api
EXPO_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# ============================================
# SENTRY CONFIGURATION (Optional)
# ============================================
# Get these from: https://sentry.io/settings/projects/
SENTRY_DSN=your-sentry-dsn-here
SENTRY_ORG=your-org
SENTRY_PROJECT=your-project
SENTRY_AUTH_TOKEN=your-auth-token

# ============================================
# AMPLITUDE ANALYTICS (Optional)
# ============================================
# Get this from: https://analytics.amplitude.com/
EXPO_PUBLIC_AMPLITUDE_API_KEY=your-amplitude-api-key

# ============================================
# EXPO CONFIGURATION
# ============================================
# Get this from: https://expo.dev/accounts/[account]/settings/access-tokens
EXPO_TOKEN=your-expo-token

# ============================================
# NOTIFICATION CONFIGURATION
# ============================================
# Expo Push Notification Configuration
EXPO_PUBLIC_PUSH_NOTIFICATION_ENABLED=true

# ============================================
# APP CONFIGURATION
# ============================================
# Development, Staging, or Production
EXPO_PUBLIC_ENVIRONMENT=development

# API Base URL (if using custom backend)
EXPO_PUBLIC_API_BASE_URL=https://api.yourapp.com

# Feature Flags
EXPO_PUBLIC_ENABLE_ANALYTICS=true
EXPO_PUBLIC_ENABLE_ERROR_TRACKING=true
EXPO_PUBLIC_ENABLE_PERFORMANCE_MONITORING=true

# ============================================
# THIRD-PARTY INTEGRATIONS (Optional)
# ============================================
# Google OAuth
EXPO_PUBLIC_GOOGLE_CLIENT_ID=your-google-client-id

# Apple OAuth
EXPO_PUBLIC_APPLE_CLIENT_ID=your-apple-client-id

# ============================================
# DEVELOPMENT SETTINGS
# ============================================
# Enable debug mode
DEBUG=false

# Enable verbose logging
VERBOSE_LOGGING=false

# Skip authentication (for development only)
SKIP_AUTH=false

# ============================================
# TESTING CONFIGURATION
# ============================================
# Test Supabase Instance (optional)
TEST_SUPABASE_URL=https://your-test-project.supabase.co
TEST_SUPABASE_ANON_KEY=your-test-anon-key

# ============================================
# NOTES
# ============================================
# - All EXPO_PUBLIC_* variables are embedded in the app bundle
# - Keep sensitive keys private and never expose them in public repositories
# - Use different credentials for development, staging, and production
# - Rotate keys regularly for security
